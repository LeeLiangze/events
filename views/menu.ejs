<% include partials/iframe_header %>
<link rel="stylesheet" href="/css/bootstrap-table.min.css">
<link rel="stylesheet" href="/css/jquery.treegrid.min.css">

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box" style="margin-bottom:auto">
                <div class="box-header with-border">
                    <caption>
                        <button type="button" class="btn btn-default" id="menu_refresh"><i
                                    class="fa fa-refresh icon-white"></i> Refresh
                        </button>
                        <button type="button" class="btn btn-success" id="menu_add" data-toggle="modal"
                                data-whatever=""><i class="glyphicon glyphicon-edit icon-white"></i> Add
                        </button>
                        <button type="button" class="btn btn-info" id="menu_edit" data-toggle="modal" id="user-edit"><i
                                    class="fa fa-edit icon-white"></i> Edit
                        </button>
                        <button type="button" class="btn btn-danger" id="menu_batch_remove"><i
                                    class="fa fa-remove icon-white"></i> Delete
                        </button>
                    </caption>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="menus"></table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->

<div class="modal fade" id="e-dialog-menu" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                            aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="exampleModalLabel">Edit</h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal" id="e-menu-form">
                    <div class="box-body">
                        <input type="hidden" data-name="e_id" name="e_id" id="e_id"/>
                        <div class="form-group">
                            <label for="username" class="col-sm-2 control-label">Name</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" name="e_menu_name" id="e_menu_name"
                                       placeholder="">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="username" class="col-sm-2 control-label">Parent Menu</label>
                            <div class="col-sm-10">
                                <div class="parent_id"></div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="username" class="col-sm-2 control-label">Route</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="e_menu_url" name="e_menu_url"
                                       placeholder="">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="type" class="col-sm-2 control-label">Type</label>
                            <div class="col-sm-10">
                                <select name="e_type" id="e_type">
                                    <option value="0">Menu</option>
                                    <option value="1">Button</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="menu_flag" class="col-sm-2 control-label">Flag</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="e_menu_flag" name="e_menu_flag"
                                       placeholder="">
                                <label>Flag should unique</label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="username" class="col-sm-2 control-label">Icon</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="e_menu_icon" name="e_menu_icon"
                                       placeholder="">
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="saveMenu">Save</button>
            </div>
        </div>
    </div>
</div>
<% include partials/iframe_footer %>
<script src="/javascripts/bootstrap-table.min.js"></script>
<script src="/javascripts/bootstrap-table-treegrid.js"></script>
<script src="/javascripts/jquery.treegrid.min.js"></script>
<script src="/service/menu_manage.js"></script>
